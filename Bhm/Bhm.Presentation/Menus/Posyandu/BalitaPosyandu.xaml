			<Grid Margin="8.846,17.621,10,11.213">
				<Label Content="Nama Balita" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="12" FontWeight="Normal"/>
				<Label Content="Nama Ayah" HorizontalAlignment="Left" Margin="0,24.905,0,0" VerticalAlignment="Top" FontSize="12" FontWeight="Normal"/>
				<Label Content="Nama Ibu" HorizontalAlignment="Left" Margin="0,52.337,0,28" FontSize="12" FontWeight="Normal" d:LayoutOverrides="Height"/>
