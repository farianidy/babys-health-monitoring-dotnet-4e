				<TextBox x:Name="tbNamaAyah" Margin="92.106,27.429,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Normal" FontSize="12"/>
				<TextBox x:Name="tbNamaIbu" Margin="92.106,0,0,30.376" TextWrapping="Wrap" VerticalAlignment="Bottom" FontWeight="Normal" FontSize="12"/>
				<Button x:Name="bCari" Content="Cari" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" FontSize="12" FontWeight="Normal" Click="bCari_Click" Margin="0,84.337,0,0"/>
			</Grid>
		</GroupBox>
		<DataGrid x:Name="dgBalita" Margin="320.095,51.246,8,38.916"/>
		<Label Content="klik 2x untuk melihat detail dan mengubah" HorizontalAlignment="Right" Margin="0,0,8,12.502" VerticalAlignment="Bottom" FontSize="9.333"/>
	</Grid>
